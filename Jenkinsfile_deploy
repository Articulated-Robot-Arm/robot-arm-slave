pipeline {
    agent any

    stages {
        stage('System Information for Debugging') {
            steps {
                script {
                    sh """
                      set -e
                      apt install arp-scan net-tools
                      arp-scan --interface=enp36s0 --localnet
                      ifconfig
                    """
                }
            }
        }

        stage('Apply updates to slaves') {
            steps {
                script {
                    sh "./scripts/mc-deploy.sh"
                }
            }
        }

        stage('Teardown') {
            steps {
                script {
                    echo "Cleaning up..."
                    // Example teardown step
                    sh 'echo Cleaning workspace'
                }
            }
        }
    }

    post {
        always {
            script {
                echo "Pipeline completed."
            }
        }
    }
}